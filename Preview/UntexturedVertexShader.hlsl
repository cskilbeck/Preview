//////////////////////////////////////////////////////////////////////

cbuffer VertConstants
{
	float4x4 ProjectionMatrix;
}

//////////////////////////////////////////////////////////////////////

struct VS_INPUT
{
	float2 pos : POSITION;
	float4 col : COLOR0;
};

//////////////////////////////////////////////////////////////////////

struct PS_INPUT
{
	float4 Pos : SV_Position;
	float4 col : COLOR0;
};

//////////////////////////////////////////////////////////////////////

PS_INPUT main(VS_INPUT input)
{
	PS_INPUT o;
	o.Pos = mul(float4(input.pos.x, input.pos.y, 0.5, 1.0), ProjectionMatrix);
	o.col = input.col;
	return o;
}

